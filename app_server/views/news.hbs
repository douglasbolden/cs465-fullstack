<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>News - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
								<h3>Latest News</h3>
								<ul>
									{{#each latest}}
									<li>
										<a href="/news">{{this.title}}</a>
									</li>
									{{/each}}
								</ul>
								<h3>Vacation Tips</h3>
								<ul>
									{{#each vacationTips}}
									<li>
										<a href="/news">{{this.title}}</a>
									</li>
									{{/each}}
								</ul>
							</div>
							<div>
								<h1>News</h1>
								{{#each newsposts}}
									<img src="images/{{this.image}}" alt="Img">
									<h2>{{this.postTitle}}</h2>
									<span class="time">{{this.postDate}}<br> by: {{this.posterName}}</span>
									{{{this.postData}}}
								{{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer}}
	</div>
</body>
</html>